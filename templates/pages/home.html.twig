{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="jumbotron text-center">
            <h1>Welcome on Space Agency</h1>
            <p>First space travel agency in the world</p>
        </div>
    </div>
    <div class="container">
        <h2>Latest offers</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id : property.id, slug : property.slug} ) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">{{ property.planet }}, {{ property.address }}</p>
                            <div class="text-primary">{{ property.formattedPrice }} $</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}